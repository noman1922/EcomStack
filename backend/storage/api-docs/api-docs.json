                    "200": {
                        "description": "List of reviews"
                    }
                }
            },
            "post": {
                "tags": [
                    "Reviews"
                ],
                "summary": "Add a review for a product",
                "operationId": "468970884a765ecd9d8946611b2b56f8",
                "responses": {
                    "201": {
                        "description": "Review created"
                    },
                    "400": {
                        "description": "Not eligible to review"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/reviews/{id}": {
            "delete": {
                "tags": [
                    "Reviews"
                ],
                "summary": "Delete a review",
                "operationId": "89986343b5dbd2b909c2764aeb7e4096",
                "responses": {
                    "200": {
                        "description": "Review deleted"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/user/pending-reviews": {
            "get": {
                "tags": [
                    "Reviews"
                ],
                "summary": "Get products pending review for logged-in user",
                "operationId": "275d1f370c699c35c861aae1f5bf0ae8",
                "responses": {
                    "200": {
                        "description": "List of products pending review"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/wishlist": {
            "get": {
                "tags": [
